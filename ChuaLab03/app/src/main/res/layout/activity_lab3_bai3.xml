<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lab3Bai3">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guiline2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guiline4"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>

    <TextView
        android:id="@+id/view1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#F9FF70"
        android:text="1"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/guiline2"
        app:layout_constraintTop_toBottomOf="@id/guiline1" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#9378F4"
        app:layout_constraintTop_toBottomOf="@id/guiline1"
        app:layout_constraintEnd_toStartOf="@id/guiline4"
        android:text="2"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/view5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FC815A"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="5"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="3"
        android:background="#F9FF70"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/view5"
        app:layout_constraintStart_toEndOf="@id/guiline2"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#9378F4"
        app:layout_constraintTop_toBottomOf="@id/view5"
        app:layout_constraintEnd_toStartOf="@id/guiline4"
        android:text="4"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>